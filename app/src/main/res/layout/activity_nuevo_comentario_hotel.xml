<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.solinpromex.elpasojuarezexperience.NuevoComentarioHotel">

    <TextView android:text="@string/mexComentariosHotel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        />



    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Nombre de usuario"
        android:ems="10"
        android:layout_below="@id/textView3"
        android:id="@+id/etusername"
        android:imeOptions="actionNext"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Email"
        android:ems="10"
        android:layout_below="@id/etusername"
        android:id="@+id/etemail"
        android:imeOptions="actionNext"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@id/etemail"
        android:id="@+id/editText"
        android:imeOptions="actionDone"
        android:text="Su opinión"
        android:scrollHorizontally="false"
        android:lines="3"/>

    <TextView android:text="Realice su valoración"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText"
        android:id="@+id/textView"
        android:paddingTop="15dp"
        />

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_below="@id/textView"
        android:paddingTop="5dp"
        android:max="10"
        android:progress="1"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="10"
        android:id="@+id/textView4"
        android:layout_below="@id/seekBar"
    android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="@color/verdeandroid"
        android:textStyle="bold" />

</RelativeLayout>
