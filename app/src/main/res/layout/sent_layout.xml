<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="horizontal">



        <ImageView
            android:layout_width="85dp"
            android:layout_height="113dp"
            android:id="@+id/imageView2"
            android:src="@drawable/escudo_juarez"
            android:scaleType="centerInside" />

        <ImageView
            android:layout_width="95dp"
            android:layout_height="113dp"
            android:id="@+id/imageView3"
            android:src="@drawable/elpaso" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="false"

        android:src="@drawable/up"
        android:layout_marginLeft="0dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Seleccione aquí para abrir el menú"
        android:layout_toRightOf="@id/imageView4"
        android:id="@+id/textView4"
        android:paddingTop="15dp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ENVIAR SOLICITUD PARA APARECER EN LA APP"
        android:id="@+id/solicitud"
        android:layout_gravity="bottom"
        android:onClick="solicitar"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentBottom="true" />
</RelativeLayout>